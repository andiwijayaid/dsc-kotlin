<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".BasketBallActivity">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="2"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="TEAM A"
                      android:layout_gravity="center"
                      android:textColor="@android:color/black"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/a_pointTV"
                      android:layout_gravity="center"
                      android:textSize="48sp"
                      android:text="0"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+3 Point"
                    android:id="@+id/a_3_pointBT"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+1 Point"
                    android:id="@+id/a_1_pointBT"/>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="2"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="TEAM B"
                      android:layout_gravity="center"
                      android:textColor="@android:color/black"/>

            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:id="@+id/b_pointTV"
                      android:layout_gravity="center"
                      android:textSize="48sp"
                      android:text="0"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+3 Point"
                    android:id="@+id/b_3_pointBT"/>

            <Button android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+1 Point"
                    android:id="@+id/b_1_pointBT"/>

        </LinearLayout>

    </LinearLayout>

    <Button android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RESET"
            android:id="@+id/resetBT"/>

</LinearLayout>